{
    "apiVersion": "v1",
    "kind": "ReplicationController",
    "metadata": {
        "name": "lb-{{GIT_HASH}}",
        "labels": {
            "app": "nginx",
            "tier": "frontend"
        }
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "app": "nginx",
            "tier": "frontend"
        },
        "template": {
            "metadata": {
                "labels": {
                    "name": "lb",
                    "app": "nginx",
                    "tier": "frontend"
                }
            },
            "spec": {
                "volumes": [
                    {
                        "name": "etcssl",
                        "secret": {
                            "secretName": "ssl-certificates"
                        }
                    }
                ],
                "containers": [
                    {
                        "name": "nginx",
                        "image": "gcr.io/m2onk8s/nginx:{{GIT_HASH}}",
                        "ports": [
                            {
                                "containerPort": 80
                            },
                            {
                                "containerPort": 443
                            }
                        ],
                        "volumeMounts": [
                            {
                                "name": "etcssl",
                                "readOnly": true,
                                "mountPath": "/etc/ssl"
                            }
                        ]
                    }
                ]
            }
        }
    }
}
