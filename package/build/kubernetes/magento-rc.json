{
    "apiVersion": "v1",
    "kind": "ReplicationController",
    "metadata": {
        "name": "magento-{{GIT_HASH}}",
        "labels": {
            "app": "magento",
            "tier": "frontend"
        }
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "app": "magento",
            "tier": "frontend"
        },
        "template": {
            "metadata": {
                "labels": {
                    "name": "magento",
                    "app": "magento",
                    "tier": "frontend"
                }
            },
            "spec": {
                "volumes": [
                    {
                        "name": "etcmagento",
                        "secret": {
                            "secretName": "magento-credentials"
                        }
                    }
                ],
                "containers": [
                    {
                        "name": "magento",
                        "image": "gcr.io/m2onk8s/php:{{GIT_HASH}}",
                        "ports": [
                            {
                                "containerPort": 9000
                            }
                        ],
                        "volumeMounts": [
                            {
                                "name": "etcmagento",
                                "readOnly": true,
                                "mountPath": "/etc/magento"
                            }
                        ]
                    }
                ]
            }
        }
    }
}
